<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#f5f5f5"
    app:cardElevation="1dp"
    app:cardCornerRadius="20dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:orientation="vertical">

        <com.github.abdularis.civ.AvatarImageView
            android:id="@+id/profile_image"
            android:layout_width="79dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/img_duvida"
            app:avatarBackgroundColor="#1976D2"
            app:state="IMAGE"
            app:textSize="22sp" />

        <TextView
            android:id="@+id/profile_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/profile_image"
            android:fontFamily="@font/nunito_semi_bold"
            android:gravity="center"
            android:text="SALA 1"
            android:textAllCaps="true"
            android:textColor="#1d1d1d"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <TextView
                android:id="@+id/profile_nomee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/profile_image"
                android:fontFamily="@font/nunito_semi_bold"
                android:gravity="center"
                android:text="Palestrante:"
                android:textColor="#1d1d1d"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/profile_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_toEndOf="@+id/profile_image"
                android:fontFamily="@font/nunito_semi_bold"
                android:gravity="center"
                android:text="Lucas Reinaldo"
                android:textColor="#1d1d1d"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/profile_mensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_nome"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/profile_image"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@android:drawable/bottom_bar"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profile_pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_nome"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/profile_image"
            android:fontFamily="@font/nunito_sans_extralight"
            android:gravity="left"
            android:text="Enviado por:"
            android:textColor="#1d1d1d"
            android:textSize="14sp" />

            <TextView
                android:id="@+id/profile_autor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_sans_extralight"
                android:gravity="left"
                android:text="Lucas Santos Reinaldo"
                android:textColor="#1d1d1d"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/profile_pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_nome"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/profile_image"
                android:fontFamily="@font/nunito_sans_extralight"
                android:gravity="left"
                android:text="E-mail:"
                android:textColor="#1d1d1d"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/nunito_sans_extralight"
                android:gravity="left"
                android:text="vostorebr@gmail.com"
                android:textColor="#1d1d1d"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>